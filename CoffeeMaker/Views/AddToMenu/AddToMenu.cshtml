@model IEnumerable<CoffeeMaker.Entities.Recipe>

@{
    ViewBag.Title = "AddToMenu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddToMenu</h2>

<p>
    @Html.ActionLink("Create New", "CreateCoffee")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Drinks.DrinkName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stocks.Item)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Drinks.DrinkName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stocks.Item)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RecipeId }) |
            @Html.ActionLink("Details", "Details", new { id=item.RecipeId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RecipeId })
        </td>
    </tr>
}

</table>
